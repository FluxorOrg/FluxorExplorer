platform :mac do
  lane :release do
    increment_build_number(build_number: number_of_commits)
    build_app(catalyst_platform: "macos", installer_cert_name: ENV["INSTALLER_CERT_NAME"])
    upload_to_app_store
  end
end

platform :ios do
  lane :release do
    increment_build_number(build_number: number_of_commits)
    build_app(catalyst_platform: "ios")
    upload_to_app_store
  end
end
